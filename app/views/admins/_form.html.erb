<%= form_with(model: admin) do |form| %>
  <% if admin.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(admin.errors.count, "error") %> prohibited this admin from being saved:</h2>

      <ul>
        <% admin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.hidden_field :admin_id, value: @admin.id %>
  </div>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username, :readonly => true %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password, :readonly => true, :placeholder => "*************" %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="actions">
    <%= form.submit "Update profile" %>
  </div>
<% end %>
