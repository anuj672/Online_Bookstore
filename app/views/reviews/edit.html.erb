<h1>Editing review</h1>

<%= form_with(model: @review) do |form| %>
  <% if @review.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
        <% @review.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.hidden_field :user_id %>
  </div>

  <div class="field">
    <%= form.hidden_field :admin_id %>
  </div>

  <div class="field">
    <%= form.label :book_id %>
    <%= select("review", "book_id", Book.all.collect{ |b| [ b.name, b.id] }) %>
  </div>

  <div class="field">
    <%= form.label :rating %>
    <%= form.number_field :rating, :id => 'rating', min: 1, max: 5 %>
  </div></br>


  <div>
    <%= form.label :review, style: "display: block" %>
    <%= form.text_area :review %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
<br>

<div>
  <%= link_to "Show this review", @review %> |
  <%= link_to "Back to reviews", reviews_path %>
</div>
