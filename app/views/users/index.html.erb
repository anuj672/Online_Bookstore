<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Username</th>
    <th>Email</th>
    <th>Phone Number</th>
    <th colspan="4"></th>
  </tr>
  </thead>

  <tbody>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.phone_number %></td>
      <td><%= link_to "View User Details", user %></td>
    </tr>
  <% end %>
  </tbody>
</table>


<%= link_to "New user", new_user_path %>
